<UserControl x:Class="Graphite.Demo.Basic"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
              xmlns:Graphite="clr-namespace:Graphite;assembly=Graphite" 
    Width="841" Height="529">

    <StackPanel x:Name="LayoutRoot" Background="White">
      <!--Important, you need to set the Background property in order to have a MouseDown event bubbling.-->
      <Graphite:GraphCanvas x:Name="graphite" Width="500" Height="500" Background="White" HorizontalAlignment="Left"/> 
    </StackPanel>
</UserControl>
